<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aliangspace="http://schemas.android.com/apk/res/com.meishimeike"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2.0" >

        <com.meishimeike.MainTabWidget.MainNavigateBar
            android:id="@+id/NAV"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            aliangspace:BarText="关于我们"
            aliangspace:HaveLeftButton="false"
            aliangspace:HaveRightButton="true"
            aliangspace:NavLeftBackground="@drawable/btn_navigate_add_friend"
            aliangspace:NavLeftText=""
            aliangspace:NavRightBackground="@drawable/btn_navigate_close"
            aliangspace:NavRightText="" >
        </com.meishimeike.MainTabWidget.MainNavigateBar>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scrollbars="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <ImageView
                android:id="@+id/about1"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_about_1" />

            <ImageView
                android:id="@+id/about2"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_below="@+id/about1"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_about_2" />

            <ImageView
                android:id="@+id/about3_1"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@+id/about2"
                android:scaleType="fitXY"
                android:src="@drawable/img_about_3_1" >
            </ImageView>

            <ImageView
                android:id="@+id/about3_2"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@+id/about3_1"
                android:scaleType="fitXY"
                android:src="@drawable/img_about_3_2" >
            </ImageView>

            <ImageView
                android:id="@+id/about3_3"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@+id/about3_2"
                android:scaleType="fitXY"
                android:src="@drawable/img_about_3_3" >
            </ImageView>

            <ImageView
                android:id="@+id/about3_4"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@+id/about3_3"
                android:scaleType="fitXY"
                android:src="@drawable/img_about_3_4" >
            </ImageView>

            <ImageView
                android:id="@+id/about3_5"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@+id/about3_4"
                android:scaleType="fitXY"
                android:src="@drawable/img_about_3_5" >
            </ImageView>

            <ImageView
                android:id="@+id/about4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about3_5"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_about_4" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>