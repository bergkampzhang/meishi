<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgDiver"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/img_divider" />

        <TextView
            android:id="@+id/txtDesc"
            style="@style/Common_Title_Text_Single"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:text="您也可以用下方式登录" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgLoginSina"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1.0"
            android:scaleType="fitXY"
            android:src="@drawable/img_sina_logo" />

        <Button
            android:id="@+id/btnLoginSina"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.2"
            android:background="@drawable/btn_login_style"
            android:gravity="center"
            android:text="新浪微博"
            android:textColor="@color/gray"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLoginKaixin"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/imgLoginKaixin"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1.0"
            android:scaleType="fitXY"
            android:src="@drawable/img_login_kaixin" />

        <Button
            android:id="@+id/btnLoginKaixin"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.2"
            android:background="@drawable/btn_common_style"
            android:enabled="false"
            android:gravity="center"
            android:text="开心网"
            android:textColor="@color/btn_common_color_style" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLoginRenren"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/imgLoginRenren"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1.0"
            android:scaleType="fitXY"
            android:src="@drawable/img_login_renren" />

        <Button
            android:id="@+id/btnLoginRenren"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.2"
            android:background="@drawable/btn_common_style"
            android:enabled="false"
            android:gravity="center"
            android:text="人人网"
            android:textColor="@color/btn_common_color_style" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLoginDouban"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/imgLoginDouban"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1.0"
            android:scaleType="fitXY"
            android:src="@drawable/img_login_douban" />

        <Button
            android:id="@+id/btnLoginDouban"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.2"
            android:background="@drawable/btn_common_style"
            android:enabled="false"
            android:gravity="center"
            android:text="豆瓣"
            android:textColor="@color/btn_common_color_style" />
    </LinearLayout>

</LinearLayout>