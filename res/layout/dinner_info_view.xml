<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/foreground"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp" >

    <RelativeLayout
        android:id="@+id/rlImgDinner"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/bg_main_head"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgDinner"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_common_dinner" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/rlImgDinner"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtDName"
            style="@style/person_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_vertical" />

        <TextView
            android:id="@+id/txtDAddress"
            style="@style/Main_Item_Desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDName"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/img_common_dinner"
            android:drawablePadding="5dp"
            android:gravity="left|top"
            android:singleLine="false" />

        <TextView
            android:id="@+id/txtDPhone"
            style="@style/Main_Item_Desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDAddress"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/img_dinner_phone"
            android:drawablePadding="5dp"
            android:gravity="left|top" />
    </RelativeLayout>

</RelativeLayout>