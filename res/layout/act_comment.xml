<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aliangspace="http://schemas.android.com/apk/res/com.meishimeike"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2.0" >

        <com.meishimeike.DishTabWidget.DishNavigateBar
            android:id="@+id/DishNAV"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            aliangspace:DishBarText="评论"
            aliangspace:DishHaveLeftButton="true"
            aliangspace:DishHaveRightButton="true"
            aliangspace:DishNavLeftBackground="@drawable/btn_navigate_back"
            aliangspace:DishNavLeftText=""
            aliangspace:DishNavRightBackground="@drawable/btn_navigate_ok"
            aliangspace:DishNavRightText="" >
        </com.meishimeike.DishTabWidget.DishNavigateBar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.2"
        android:orientation="vertical"
        android:padding="10dp" >

        <EditText
            android:id="@+id/txtComment"
            style="@style/Common_content_Edit_Multi"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:background="@drawable/bg_comment_edit"
            android:hint="请输入140字以内评论"
            android:padding="5dp" />

        <Button
            android:id="@+id/btnOk"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1.0"
            android:background="@drawable/btn_common_style"
            android:gravity="center"
            android:text="发送评论"
            android:textColor="@color/btn_common_color_style" />
    </LinearLayout>

</LinearLayout>